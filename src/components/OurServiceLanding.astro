---
import { Image } from "astro:assets";
import MantenimientoPrev from "../../public/img/mantenimiento_preventivo.svg";
import Pintura from "../../public/img/pintura.svg";
import MantenimientoInd from "../../public/img/machines.svg";

const content = {
  title: "Nuestros servicios",
};

const products = [
  {
    label: "Mantenimiento Preventivo",
  },
  {
    label: "Pintura",
  },
  {
    label: "Mantenimiento industrial",
  },
];
---

<section>
  <div
    class="bg-heroBgServices bg-cover bg-center bg-no-repeat flex flex-col justify-center w-full max-h-screen items-center"
  >
    <div
      class="flex flex-col w-full max-h-screen bg-orange-500 bg-opacity-80 backdrop-blur-sm"
    >
      <h1 class="text-center text-5xl m-4 font-bold">{content.title}</h1>
      <div class="flex flex-col lg:flex-row justify-center">
        <div class="flex flex-row justify-center items-center m-6 text-center">
          <Image src={MantenimientoPrev} alt="" class="max-w-[100px] m-4" />
          <p class="text-2xl">{products[0].label}</p>
        </div>
        <div class="flex flex-row justify-center items-center m-6 text-center">
          <Image src={Pintura} alt="" class="max-w-[100px] m-4" />
          <p class="text-2xl">{products[1].label}</p>
        </div>
        <div class="flex flex-row justify-center items-center m-6 text-center">
          <Image src={MantenimientoInd} alt="" class="max-w-[100px] m-4" />
          <p class="text-2xl">{products[2].label}</p>
        </div>
      </div>
    </div>
  </div>
</section>
